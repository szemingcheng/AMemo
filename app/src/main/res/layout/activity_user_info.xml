<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szemingcheng.amemo.ui.unlogin.activity.setting.UserInfoActivity">
    <include layout="@layout/toolbar_in_setting"/>
    <com.szemingcheng.amemo.utils.CircleImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:id="@+id/default_avatar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/user1"/>

    <LinearLayout style="@style/wrap_layout"
        android:layout_marginTop="30dp">
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/top_layout"
            android:id="@+id/userinfo_onscreenname">
            <TextView style="@style/usertext"
                android:text="昵称" />
            <TextView
                android:id="@+id/userinfo_onscreenname_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onscreenname"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/mid_layout"
            android:id="@+id/userinfo_userid">
            <TextView style="@style/usertext"
                android:text="账号" />
            <TextView
                android:id="@+id/userinfo_userid_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Userid"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/bottom_layout"
            android:id="@+id/userinfo_passwd">
            <TextView style="@style/usertext"
                android:text="密码" />
            <TextView
                android:id="@+id/userinfo_passwd_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="******"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
