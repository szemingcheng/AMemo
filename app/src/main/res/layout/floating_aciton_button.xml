<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_animationDelayPerItem="0"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_colorNormal="#43A047"
        fab:menu_colorPressed="#2E7D32"
        fab:menu_colorRipple="#1B5E20"
        fab:menu_labels_maxLines="2"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_fab_label="文字笔记">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_drawable_cam"
            fab:fab_colorNormal="#43A047"
            fab:fab_colorPressed="#2E7D32"
            fab:fab_colorRipple="#1B5E20"
            fab:fab_size="mini"
            fab:fab_label="拍照" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_drawable_memo_pic"
            fab:fab_colorNormal="#43A047"
            fab:fab_colorPressed="#2E7D32"
            fab:fab_colorRipple="#1B5E20"
            fab:fab_size="mini"
            fab:fab_label="附件" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_drawable_menu_reminder_black"
            fab:fab_colorNormal="#43A047"
            fab:fab_colorPressed="#2E7D32"
            fab:fab_colorRipple="#1B5E20"
            fab:fab_size="mini"
            fab:fab_label="提醒" />


    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>