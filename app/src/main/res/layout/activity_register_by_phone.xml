<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_by_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szemingcheng.amemo.ui.login.activity.RegisterByPhoneActivity">

    <com.szemingcheng.amemo.utils.TitleLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:padding="15dp">

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号" />

        <EditText
            android:id="@+id/code_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/phone_edit"
            android:hint="请输入验证码" />

        <Button
            android:id="@+id/registerbyPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/code_bn"
            android:layout_marginTop="17dp"
            android:text="注册" />

        <Button
            android:id="@+id/code_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/code_edit"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="获取验证码" />
    </RelativeLayout>

</LinearLayout>
