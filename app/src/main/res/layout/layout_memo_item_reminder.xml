<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/memo_item">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|top"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/a_memo_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp">
            <TextView
                android:id="@+id/memo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="2"
                tool:text="XXXXMemo"
                android:textColor="@color/memo_title"
                android:textSize="@dimen/memo_title_txt"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />
            <TextView
                android:id="@+id/memo_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                tool:text="@string/haha"
                android:textColor="@color/memo_content"
                android:maxLines="4"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />
            <TextView
                android:id="@+id/memo_reminder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:drawableStart="@drawable/vector_drawable_reminder_clock"
                android:drawableLeft="@drawable/vector_drawable_reminder_clock"
                tool:text="TODAY"
                android:textColor="@color/reminder_color"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:padding="5dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>